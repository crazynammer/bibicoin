<script>
function updateBuyAmt()
{
	var twdAmt = document.getElementById("NTDBuy").value;
	var btcToTwd = "<%= @buyValue %>";
	var btcAmt = +twdAmt / +btcToTwd;
	document.getElementById("BTCBuy").value = parseFloat(+btcAmt).toFixed(5);
}

function updateSellAmt()
{
	var btcAmt = document.getElementById("NTDSell").value;
	var btcToTwd = "<%= @sellValue %>";
	var twdAmt = +btcAmt * +btcToTwd;
	document.getElementById("BTCSell").value = parseFloat(+twdAmt).toFixed(0);
}
</script>