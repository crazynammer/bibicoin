		  <div class="small-4 columns"><a href="#" class="[tiny small large] button disabled"><b><%=t :sell_step1 %></b> <%=t :sell_step2_text %></a></div>
		  <div class="small-4 columns"><a href="#" class="[tiny small large] button"><b><%=t :sell_step2 %></b> <%=t :sell_step2_text %></a></div>
