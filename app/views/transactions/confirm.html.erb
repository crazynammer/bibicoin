<div>
	<div id="before-content-area" class="bibicoin-header-bg-orange">
		<h1><%=t :header_buy %></h1>
	</div>
	
	<div class ="row">
	  <div class="small-8 columns">	
	<% if @transaction.transaction_type_id == 0 %>
		<h4>Confirm Buy</h4>
	<% elsif @transaction.transaction_type_id == 1 %>
		<h4>Confirm Sell</h4>
	<% end %>
	
		<%= form_for @transaction do |f| %>
		
			<%= f.label :walletID, "Wallet Address" %>
			<%= f.text_field :walletID, :value => @transaction.walletID, :readonly => true %>
			
			<%= f.label :name %>
			<%= f.text_field :name, :value => @transaction.name, :readonly => true %>
			
			<%= f.label :email, "Email Address" %>
			<%= f.text_field :email, :value => @transaction.email, :readonly => true %>
			
			<%= f.label :DoB, "Date of Birth" %>
			<%= f.text_field :DoB, :value => @transaction.DoB, :readonly => true %>
			
			<!-- Update to Whole number-->
			<%= f.label :TWDAmt, "NTD Amount" %>
			<%= f.text_field :TWDAmt, :value => @transaction.TWDAmt, :readonly => true %>
			
			<%= f.label :BTCAmt, "Bitcoin Amount" %>
			<%= f.text_field :BTCAmt, :value => @transaction.BTCAmt, :readonly => true %>
			
			<!-- Update to Whole number-->
			<%= f.label :commAmt, "Commission Amount" %>
			<%= f.text_field :commAmt, :value => @transaction.commAmt, :readonly => true %>
		
		
			Total Amount 
			<br />
			<!-- Update to Whole number-->
			<p id = "totalAmt"><%= @transaction.TWDAmt + @transaction.commAmt %></p>
								
			<%= f.label :bankName, "Bank Name" %>
			<%= f.text_field :bankName, :value => @transaction.bankName, :readonly => true %>
			
			<%= f.label :bankAcctNumber, "Bank Account Number" %>
			<%= f.text_field :bankAcctNumber, :value => @transaction.bankAcctNumber, :readonly => true %>
			
			<%= f.hidden_field :transaction_type_id, :value => @transaction.transaction_type_id %>
			<%= f.hidden_field :bibicoinBTCtoTWD, :value => @transaction.bibicoinBTCtoTWD %>
			
			<%= f.submit "Create" %>
			
		<% end %>
	  </div> 	  
	  <div class="small-4 columns">
		<h4><%=t :buy_reviewconfirm %></h4><br><br>
		<p><%=t :buy_reviewconfirm_b1%></p>
		<p><%=t :buy_reviewconfirm_b2%></p>				
	  </div> 
	  </div> 	  	
	</div>		
		
	
	</div>
</div>