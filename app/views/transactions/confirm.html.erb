		  <div class="small-4 columns"><a href="#" class="[tiny small large] button disabled"><b><%=t :buy_step1 %></b> <%=t :buy_step1_text %></a></div>
		  <div class="small-4 columns"><a href="#" class="[tiny small large] button"><b><%=t :buy_step2 %></b> <%=t :buy_step2_text %></a></div>
