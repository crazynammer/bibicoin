	<% end %>
	
	<div class ="row">
	  <div class="small-7 columns">	
	<% if @transaction.transaction_type_id == 0 %>
		<h4><%=t :header_buy_sell_confirm %></h4>
	<% elsif @transaction.transaction_type_id == 1 %>
		<h4><%=t :header_buy_sell_confirm %></h4>
	<% end %>
	
		<%= form_for @transaction do |f| %>

		<table>
			
	<% if @transaction.transaction_type_id == 0 %>
				
			<!-- Update to Whole number-->
			<tr>
				<!--TODO: Need to calculate this Buy Rate Amount -->
				<td><%= f.label :TWDAmt, t('form_buyrate') %></td>
				<td><%= f.text_field :TWDAmt, :value => @transaction.TWDAmt, :readonly => true %></td>
			<tr>
			<tr>			
				<td><%= f.label :TWDAmt, t('form_purchaseamt') %></td>
				<td><%= f.text_field :TWDAmt, :value => @transaction.TWDAmt, :readonly => true %></td>
			</tr>
			<tr>
				<td><%= f.label :BTCAmt, t('form_btcamt') %></td>
				<td><%= f.text_field :BTCAmt, :value => @transaction.BTCAmt, :readonly => true %></td>
			</tr>
<!-- Update to Whole number-->				
			<tr>
				<td><%= f.label :walletID, t('form_wallet') %></td>
				<td><%= f.text_field :walletID, :value => @transaction.walletID, :readonly => true %></td>
			</tr>					
			<tr>
				<td><%= f.label :email, t('form_email') %></td>
				<td><%= f.text_field :email, :value => @transaction.email, :readonly => true %></td>
			</tr>					
			<tr>
				<td><%= f.label :name, t('form_name') %></td>
				<td><%= f.text_field :name, :value => @transaction.name, :readonly => true %></td>
			</tr>					
			<tr>
				<td><%= f.label :DoB, t('form_birthdate') %></td>
				<td><%= f.text_field :DoB, :value => @transaction.DoB, :readonly => true %></td>
			</tr>					
			<tr>
				<td><%= f.label :totalAmt,  "Total Amount" %> </td>
				<td><p id = "totalAmt"><%= @transaction.TWDAmt + @transaction.commAmt %></p></td>
			</tr>					
			<tr>
				<td><%= f.label :bankName, t('form_bankname') %> </td>
				<td><%= f.text_field :bankName, :value => @transaction.bankName, :readonly => true %></td>
			</tr>					
			<tr>
				<td><%= f.label :bankAcctNumber, t('form_banknumber') %></td>
				<td><%= f.text_field :bankAcctNumber, :value => @transaction.bankAcctNumber, :readonly => true %></td>
			</tr>					

	<% elsif @transaction.transaction_type_id == 1 %>
			<!-- Update to Whole number-->
			<tr>
				<!--TODO: Need to calculate this Buy Rate Amount -->
				<td><%= f.label :TWDAmt, t('form_sellrate') %></td>
				<td><%= f.text_field :TWDAmt, :value => @transaction.TWDAmt, :readonly => true %></td>
			<tr>
			<tr>			
				<td><%= f.label :TWDAmt, t('form_sellamt') %></td>
				<td><%= f.text_field :TWDAmt, :value => @transaction.TWDAmt, :readonly => true %></td>
			</tr>
			<tr>
				<td><%= f.label :BTCAmt, t('form_btcamt') %></td>
				<td><%= f.text_field :BTCAmt, :value => @transaction.BTCAmt, :readonly => true %></td>
			</tr>
			<tr>
				<td><%= f.label :email, t('form_email') %></td>
				<td><%= f.text_field :email, :value => @transaction.email, :readonly => true %></td>
			</tr>					
			<tr>
				<td><%= f.label :walletID, t('form_wallet') %></td>
				<td><%= f.text_field :walletID, :value => @transaction.walletID, :readonly => true %></td>
			</tr>					
			<tr>
				<td colspan='2'><%=t :form_sellbibiwallet %></td>
			</tr>					
			<tr>
				<td><%=t :form_paymentmethod %></td>
				<td><%=t :form_paymentmethod_text %></td>
			</tr>					

<!-- Update to Whole number-->				
			<tr>
				<td><%= f.label :totalAmt,  "Total Amount" %> </td>
				<td><p id = "totalAmt"><%= @transaction.TWDAmt + @transaction.commAmt %></p></td>
			</tr>					
	<% end %>

			<tr>
				<td><%= f.label :commAmt, "Commission Amount" %></td>
				<td><%= f.text_field :commAmt, :value => @transaction.commAmt, :readonly => true %></td>
			</tr>
	
			<tr>
				<td><%= f.check_box :agreeTerms, :value =>@transaction.agreeTerms, :disabled => true %> <%=t :form_terms %></td>
			</tr>

	<!-- TODO: Captcha Verification -->
			<tr>
				<td><%= f.label :bankAcctNumber, "The sum of 1 + 5 is:" %><%=t :form_verification %></td>
				<td><%= f.text_field :bankAcctNumber, :value => @transaction.bankAcctNumber  %></td>
			</tr>											

			<%= f.hidden_field :transaction_type_id, :value => @transaction.transaction_type_id %>
