<div>
	<% if @transaction.transaction_type_id == 0 %>
		<div id="before-content-area" class="bibicoins-header-bg-orange">
			<h1><%=t :header_buy %></h1>
		</div>
	<% elsif @transaction.transaction_type_id == 1 %>
		<div id="before-content-area" class="bibicoins-header-bg-orange">
			<h1><%=t :header_sell %></h1>
		</div>
	<% end %>	
	
	<% if @transaction.transaction_type_id == 0 %>

	<div>
		<div class="row bibicoins-bg-lightgrey">
			<br>
			<div class="small-12 medium-4 large-4 columns" align="center">
				<div class="bibicoins-header-text-orange-opacity">
				<%= link_to image_tag("step1.png"), :howtobuy, anchor: "#1" %><br><br><%=t :buy_step1_text %>
				</div>
			</div>
			<div class="small-12 medium-4 large-4 columns" align="center">
				<div class="bibicoins-header-text-orange-opacity">
				<%= link_to image_tag("step2.png"), :howtobuy, anchor: "#1" %><br><br><%=t :buy_step2_text %>
				</div>
			</div>
			<div class="small-12 medium-4 large-4 columns" align="center">
				<div class="bibicoins-header-text-orange">
				<%= link_to image_tag("step3.png"), :howtobuy, anchor: "#1" %><br><br><%=t :buy_step3_text %>
				</div>
				<br>
			</div>
		</div>
	</div>	

	<% elsif @transaction.transaction_type_id == 1 %>


	<div>
		<div class="row bibicoins-bg-lightgrey">
			<br>
			<div class="small-12 medium-4 large-4 columns" align="center">
				<div class="bibicoins-header-text-orange-opacity">
				<%= link_to image_tag("step1.png"), :howtobuy, anchor: "#1" %><br><br><%=t :sell_step1_text %>
				</div>
			</div>
			<div class="small-12 medium-4 large-4 columns" align="center">
				<div class="bibicoins-header-text-orange-opacity">
				<%= link_to image_tag("step2.png"), :howtobuy, anchor: "#1" %><br><br><%=t :sell_step2_text %>
				</div>
			</div>
			<div class="small-12 medium-4 large-4 columns" align="center">
				<div class="bibicoins-header-text-orange">
				<%= link_to image_tag("step3.png"), :howtobuy, anchor: "#1" %><br><br><%=t :sell_step3_text %>
				</div>
				<br>
			</div>
		</div>
	</div>		

	<% end %>


	<div class ="row">
		<div class="small-12 medium-6 large-6 columns bibicoins-bg-beige">	
		<br>
	<% if @transaction.transaction_type_id == 0 %>
		<div class="bibicoins-subheader-txt"><%=t :header_buy_order_email_confirmation %></div>
	<% elsif @transaction.transaction_type_id == 1 %>
		<div class="bibicoins-subheader-txt"><%=t :header_buy_sell_complete %></div>
	<% end %>
	<br>

		<table class="bibicoins-bg-beige bibicoins-table-confirmation">

	<% if @transaction.transaction_type_id == 0 %>
			
			<!-- Flash Error Message -->
			<% flash.each do |name, msg| %>						
				<%= content_tag :div, msg, class: name, :class => "bibicoins-error-text-red" %>
			<% end %>
			<br>

			<tr>
				<td><%=t :form_orderid %></td>
				<td><%= @transaction.id %></td>
			<tr>
			<tr>
				<td><%=t :form_buyrate %></td>
				<td><%= number_with_precision(@transaction.TWDAmt/@transaction.BTCAmt, precision: 4) %></td>
			<tr>
			<tr>
				<td><%=t :form_purchaseamt %></td>
				<td><%= number_with_precision(@transaction.TWDAmt, precision: 0) %></td>
			<tr>
			<tr>
				<td><%=t :form_btcamt %></td>
				<td><%= @transaction.BTCAmt %> Bitcoins</td>
			<tr>
			<tr>
				<td><%=t :form_email %></td>
				<td><%= @transaction.email %></td>
			<tr>
			<tr>
				<td><%=t :form_name %></td>
				<td><%= @transaction.name %></td>
			<tr>
			<tr>
				<td><%=t :form_wallet %></td>
				<td><%= @transaction.walletID %></td>
			<tr>
			<tr>
				<td><%=t :form_buyrequestsubmitted %></td>
				<td><%= @transaction.created_at.in_time_zone("Taipei") %></td>
			<tr>
	<% elsif @transaction.transaction_type_id == 1 %>

			<!-- Flash Error Message -->
			<% flash.each do |name, msg| %>						
				<%= content_tag :div, msg, class: name, :class => "bibicoins-error-text-red" %>
			<% end %>
			<br>

			<tr>
				<td><%=t :form_orderid %></td>
				<td><%= @transaction.id %></td>
			<tr>
			<tr>
				<td><%=t :form_sellrate %></td>
				<td><%= number_with_precision(@transaction.BTCAmt/@transaction.TWDAmt, precision: 4) %></td>
			<tr>
			<tr>
				<td><%=t :form_sellamt %></td>
				<td><%= number_with_precision(@transaction.TWDAmt, precision: 0) %></td>
			<tr>
			<tr>
				<td><%=t :form_btcamt %></td>
				<td><%= @transaction.BTCAmt %> Bitcoins</td>
			<tr>
			<tr>
				<td><%=t :form_email %></td>
				<td><%= @transaction.email %></td>
			<tr>
			<tr>
				<td><%=t :form_wallet %></td>
				<td><%= @transaction.walletID %></td>
			<tr>
			<tr>
				<td><%=t :form_sellbibiwallet %></td>
				<td><b>TODO: Insert Bibi Wallet Address here.</b></td>
			<tr>
			<tr>
				<td><%=t :form_sellbankdetails %></td>
				<td><%= @transaction.bankName %> <%=t :form_sellaccountnumber %> <%= @transaction.bankAcctNumber %></td>
			<tr>

			<tr>
				<td><%=t :form_sellrequestsubmitted %></td>
				<td><%= @transaction.created_at.in_time_zone("Taipei") %></td>
			<tr>

	<% end %>
	
		</table>
					
			Commission Cost: <%= number_with_precision(@transaction.commAmt, precision: 0) %>
			<br />
			
			Total Cost: <%= number_with_precision(@transaction.TWDAmt + @transaction.commAmt, precision: 0) %>
			<br /> <br>

			<% if @transaction.transaction_type_id == 0 %>

			<% elsif @transaction.transaction_type_id == 1 %>
								
			Bank Name: <%= @transaction.bankName %>
			<br />
			
			Bank Acct: <%= @transaction.bankAcctNumber %>
			<br /><br>

			<% end %>

		<% if @transaction.transaction_type_id == 0 %>
		    <%= link_to t('form_returnhome'), :home, :class => "button small large-4 bibicoin-button" %>
			<%= link_to t('form_placeanotherbuy'), new_transaction_path(:ttype => 0), :class => "button small large-5 bibicoin-button" %>
		<% elsif @transaction.transaction_type_id == 1 %>
			<%= link_to t('form_returnhome'), :home, :class => "button small large-4 bibicoin-button" %>
			<%= link_to t('form_placeanothersell'), new_transaction_path(:ttype => 1), :class => "button small large-5 bibicoin-button" %>
		<% end %>
			
	</div>	


	<% if @transaction.transaction_type_id == 0 %>
	  <div class="small-12 medium-6 large-6 columns">
		<h3 class="subheader"><%=t :buy_confirmation %></h3>
		<p><%=t :buy_confirmation_b1%></p>
		<p><%=t :buy_confirmation_b2%><%= number_with_precision(@transaction.TWDAmt, precision: 0) %><%=t :buy_confirmation_b3%></p>		
		<p><%=t :buy_confirmation_b4%><%= @transaction.id %><%=t :buy_confirmation_b5%></p>	
	  </div> 
	<% elsif @transaction.transaction_type_id == 1 %>
	  <div class="small-12 medium-6 large-6 columns">
		<h3 class="subheader"><%=t :sell_confirmation %></h3>
		<p><%=t :sell_confirmation_b1%></p>
		<p><%=t :sell_confirmation_b2%><%= @transaction.TWDAmt %><%=t :sell_confirmation_b3%></p>		
	  </div> 
	<% end %>	
 
	  </div> 	  	
	</div>		
	</div>
</div>